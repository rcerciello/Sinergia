<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomThemeForTextInputLayout" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/error_red</item>
        <item name="errorTextAppearance">@style/ErrorThemeForTextInputLayout</item>
    </style>

    <style name="ErrorThemeForTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <style name="CustomThemeForAutocomplete" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black_garage</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">-15dp</item>

    </style>

    <style name="MyApplicationTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MyApplicationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/dark_black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <dimen name="font_20">20sp</dimen>


